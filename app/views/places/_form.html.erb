<%= form_for(@place, class: "form-horizontal") do |f| %>
  <% if @place.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@place.errors.count, "error") %> prohibited this property from being saved:</h2>

      <ul>
      <% @place.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
  	<%= f.label :name%>
  	<%= f.text_field :name %>
  </div><br>
  <div class="field form-group">
  	<%= f.label :address %>
  	<%= f.text_field :address  %>
  </div>
  <br>
  <div class="field form-group">
  	<%= f.label :city %>
  	<%= f.text_field :city  %>
  </div>
  <div class="field form-group">
  	<%= f.label :state %>
  	<%= f.text_field :state  %>
  </div>
  <div class="field form-group">
  	<%= f.label :zip %>
  	<%= f.text_field :zip  %>
  </div>

  <div class="field form-group">
  	<%= f.label :phone %>
  	<%= f.text_field :phone  %>
  </div>
  <div class="field form-group">
  	<%= f.label :kid_menu %>
  	<%= f.check_box :kid_menu  %>
  </div>
  <div class="field form-group">
  	<%= f.label :score %>
  	<%= f.text_field :score  %>
  </div>
  <div class="field form-group">
  	<%= f.label :place_type %>
  	<%= f.select :place_type, options_for_select([["Restaurant", "Restaurant"], ["Hotel", "Hotel"], ["Attraction", "Attraction"], ["Park", "Park"]])  %>
  </div>
  <div class="field form-group">
  	<%= f.label :avatar %>
  	<%= f.file_field :avatar %>
  </div>
  <br>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>